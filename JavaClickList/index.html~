<!DOCTYPE html>
<html>
<head>
	<script type="text/javascript">
		function makeList(){
			var text = "<ul><li id='1l'>1</li><li id='2l'>2</li><li id='3l'>3</li><li id='4l'>4</li></ul>";

			document.getElementById("theId").innerHTML = text;
		}
		document.getElementById("1l").addEventListener("click", function(){alert(document.getElementById("1l").innerHTML);});
		document.getElementById("2l").addEventListener("click", function(){alert(document.getElementById("2l").innerHTML);});
		document.getElementById("3l").addEventListener("click", function(){alert(document.getElementById("3l").innerHTML);});
		document.getElementById("4l").addEventListener("click", function(){alert(document.getElementById("4l").innerHTML);});
	</script>
</head>
<body  onload="makeList()">
	<div id="theId">
	</div>
</body>
</html>
